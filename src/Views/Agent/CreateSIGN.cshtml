@model Helpdesk.Crmcli_UsersSession

@{
    ViewBag.Title = "CreateSIGN";
    Layout = "~/Views/Shared/_LayoutPageMaster.cshtml";
}

<header>
    @*<link href="~/Content/Site.css" rel="stylesheet" />*@
    <link href="~/Design/css/Style.css" rel="stylesheet" />
</header>
<head>
    <style>
        .form-unique {
            width: 100%;
        }
    </style>
</head>

@*<h3>Créer une nouvelle demande</h3>*@

@using (Html.BeginForm("CreateSIGN", "Agent", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <div>
        @Html.TextBoxFor(model => model.ID_Company, new { @type = "hidden", @class = "form-unique", @Value = int.Parse(ViewBag.IDCOMP.ToString()) })
    </div>
    
    <fieldset>
        <h3>Ajout session</h3>

        <div class="col-lg-12">
            &nbsp
        </div>

        <div class="row">
                <div class="col-sm-12 form-group">
                    <div class="editor-label">
                        @Html.Label("", "Signataire")
                    </div>
                    <div>
                        @Html.DropDownListFor(model => model.SIGNNAME2, new SelectList(Model.SIGNNAME2), "", new { @class = "form-unique" })
                        @Html.ValidationMessageFor(model => model.SIGNNAME2)
                        @Html.HiddenFor(model => model.SIGNNAME2)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 form-group">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Pseudo, "Pseudo")
                    </div>
                    <div>
                        @Html.TextBoxFor(model => model.Pseudo, new { @class="form-unique" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 form-group">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Mdp, "Mot de passe")
                    </div>
                    <div>
                        @Html.TextBoxFor(model => model.Mdp, new { @class="form-unique" })
                    </div>
                </div>
            </div>
        
        <div class="col-lg-12">
            &nbsp
        </div>
        <div class="row">
            <div class="col-sm-12 form-group">
                <input type="submit" value="Enregistrer" class="form-unique"/>
            </div>
        </div>
    </fieldset>
}

