@model Helpdesk.Crmcli_UsersSession

@{
    ViewBag.Title = "EditSIGN";
    Layout = "~/Views/Shared/_LayoutPageMaster.cshtml";
}

<header>
    @*<link href="~/Content/Site.css" rel="stylesheet" />*@
    <link href="~/Design/css/Style.css" rel="stylesheet" />
</header>
<head>
    <style>
        .form-unique {
            width: 100%;
        }
    </style>
</head>

@*<h3>Créer une nouvelle demande</h3>*@

@using (Html.BeginForm("EditSIGN", "Agent", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <div>
        @Html.TextBoxFor(model => model.ID_Company, new { @type = "hidden", @class = "form-unique", @Value = int.Parse(ViewBag.IDCOMP.ToString()) })
    </div>
    <div>
        @Html.TextBoxFor(model => model.ID_Person, new { @type = "hidden", @class = "form-unique", @Value = int.Parse(ViewBag.IDPER.ToString()) })
    </div>

    <fieldset>
        <h3>Modification session</h3>

        <div class="col-lg-12">
            &nbsp
        </div>

        @{
            int ForTest = int.Parse(ViewBag.CountIs.ToString());
            string valueDef = ViewBag.ldv[2].ToString();
            
            if (ForTest == 1)
            {
                <div class="row">
                        <div class="col-sm-12 form-group">
                            <div class="editor-label">
                                @Html.Label("", "Signataire")
                            </div>
                            <div>
                                @Html.DropDownList("SIGNNAME",null, new { disabled = "disabled", @readonly = "readonly" ,@class = "form-unique"})
                                @Html.ValidationMessageFor(model => model.SIGNNAME)
                                @Html.HiddenFor(model => model.SIGNNAME)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 form-group">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.Pseudo, "Pseudo")
                            </div>
                            <div>
                                @Html.TextBoxFor(model => model.Pseudo, new { @class="form-unique", @Value = @ViewBag.ldv[0] })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 form-group">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.Mdp, "Mot de passe")
                            </div>
                            <div>
                                @Html.TextBoxFor(model => model.Mdp, new { @class="form-unique", @Value = @ViewBag.ldv[1] })
                            </div>
                        </div>
                    </div>
            }
            else
            {
                <div class="row">
                        <div class="col-sm-12 form-group">
                            <div class="editor-label">
                                @Html.Label("", "Signataire")
                            </div>
                            <div>
                                @Html.DropDownListFor(model => model.SIGNNAME, new SelectList(Model.SIGNNAME), "", new { @class = "form-unique" })
                                @Html.ValidationMessageFor(model => model.SIGNNAME)
                                @Html.HiddenFor(model => model.SIGNNAME)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 form-group">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.Pseudo, "Pseudo")
                            </div>
                            <div>
                                @Html.TextBoxFor(model => model.Pseudo, new { @class="form-unique" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 form-group">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.Mdp, "Mot de passe")
                            </div>
                            <div>
                                @Html.TextBoxFor(model => model.Mdp, new { @class="form-unique" })
                            </div>
                        </div>
                    </div>
            }
        }
        
        <div class="col-lg-12">
            &nbsp
        </div>
        <div class="row">
            <div class="col-sm-12 form-group">
                <input type="submit" value="Enregistrer" class="form-unique"/>
            </div>
        </div>
    </fieldset>
}

