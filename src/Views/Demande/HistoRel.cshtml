@{
    ViewBag.Title = "HistoRel";
    Layout = "~/Views/Shared/_LayoutPageMaster.cshtml";
}

<head>
    <style>
        thead th {
            font-size: 13px;
            padding: 15px !important;
            text-align: center;
            background-color: #D14C4C;
            color:white;
        }

        tr {
            font-size: 12px;
            padding: 15px !important;
            background-color: #242426;
            color:white;
        }

        td {
            font-size: 12px;
            padding: 15px !important;
            background-color: #242426;
            color:white;
        }
    </style>
</head>
<section>
    <div>
        <h3>Historique des relances de la demande numéro : @ViewBag.name.ToString()</h3>  
        <div class="col-sm-12">
            <table id="clients">
				<thead>
					<tr>
						<th>Date relance</th>
					</tr>
				</thead>
				<tbody>
		            @if (ViewBag.ldv != null)
                {
                    foreach (var lst in ViewBag.ldv)
                    {
		                    <tr class="row100">
		                        <td>@lst[0]</td>
		                    </tr>
                    }
                }
				</tbody>
			</table>
        </div>
    </div>
</section>

<div class="col-lg-12">
    &nbsp
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#clients").DataTable()
        })
    </script>
}
